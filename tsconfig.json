{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "lib": ["es2020", "dom"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "allowUnreachableCode": false,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true
    },
    "typedocOptions": {
        "entryPoints": ["src/matcher.class.ts"],
        "out": "docs"
    },
    "include": ["src"]
}
